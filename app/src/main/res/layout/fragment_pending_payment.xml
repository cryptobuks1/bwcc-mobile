<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PendingPaymentFragment">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="@dimen/spacing_xmedium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/doctor_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="dr. Fani Salamu, Sp.D"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/mp_xs"
                        android:layout_marginLeft="@dimen/mp_sm"
                        android:textSize="@dimen/font_xlg"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Pending"
                        android:textStyle="italic"
                        android:gravity="end"
                        android:layout_marginTop="@dimen/mp_xs"
                        android:paddingRight="@dimen/mp_sm"
                        android:textSize="@dimen/font_lg"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/klinik_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mp_xxs"
                    android:text="Spesialis Penyakit Dalam"
                    android:textSize="@dimen/font_lg"
                    android:layout_marginBottom="@dimen/mp_xs"
                    android:layout_marginLeft="@dimen/mp_sm"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_marginTop="@dimen/mp_xs"
                    android:layout_marginBottom="@dimen/mp_sm"
                    android:layout_marginLeft="@dimen/mp_sm"
                    android:layout_marginRight="@dimen/mp_sm"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Register Date"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/font_md" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="@dimen/font_md"
                            android:textColor="@color/colorText" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registration Fee"
                            android:textSize="@dimen/font_md"
                            android:textColor="@color/colorText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="@dimen/font_md"
                            android:textColor="@color/colorText" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="@dimen/font_md"
                            android:textColor="@color/colorText" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="@dimen/font_md"
                            android:textColor="@color/colorText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/mp_xs"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_booking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02-10-2019"
                            android:textSize="@dimen/font_md"
                            android:textColor="@color/colorText" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp" />

                        <TextView
                            android:id="@+id/txt_tanggal_periksa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fahri"
                            android:textSize="@dimen/font_md"
                            android:textColor="@color/colorText" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp" />

                        <TextView
                            android:id="@+id/txt_waktu_periksa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 30.000"
                            android:textSize="@dimen/font_md"
                            android:textColor="@color/colorText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient ID"
                            android:textSize="@dimen/font_md"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/nomor_antrian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00032"
                            android:textColor="@color/blue_500"
                            android:textSize="@dimen/font_xlg"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>