<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacing_ssmlarge"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mp_md"
            android:layout_gravity="center"
            android:text="Forgotten your password?"
            android:textSize="@dimen/font_xlg"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotten_password_desc"
            android:layout_marginTop="@dimen/mp_sm"
            android:gravity="center"
            android:textSize="@dimen/font_lg"
            android:textColor="@color/colorText"/>

        <View
            android:layout_width="0dp"
            android:layout_height="25dp"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_email"
            style="@style/EditText.Flat.Grey"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_round_bg_white"
            android:hint="Email"
            android:textColor="@color/blue_grey_300"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:singleLine="true"
            android:minHeight="45dp"
            android:maxLines="1"
            android:textSize="@dimen/font_xlg"
            android:theme="@style/EditText.White"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle" />

        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mp_md"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded"
            android:text="Reset My Password"
            android:textSize="@dimen/font_lg"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>